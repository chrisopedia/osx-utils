#!/usr/bin/env bash
#
# Author:
#   Sindre Sorhus (@sindresorhus)
#
# Description:
#   Copy the path for the current/active Finder window
#
# Dependencies:
#   None
#
# Usage:
#   `copy-finder-path`

copy-finder-path() {
	local usage="$(basename "$0"): usage: $(basename "$0")"
	local opt

	# Test for known flags
	for opt in $@
	do
		case $opt in
			-h|--help)
				printf '%s\n' "$usage"
				exit 2
				;;
			-*|--*) 
				printf '%sbash: %s: %s: invalid option\n' "-" "$(basename "$0")" "$opt" >&2
				printf '%s\n' "$usage"
				exit 1
				;;
		esac
	done

	cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')"

	fi
}

_copy-finder-path "$@"
